{
    "name": "slick/amqp",
    "description": "AMQP module for Slick enabling seamless message exchange with brokers like RabbitMQ through producers and consumers.",
    "type": "library",
    "version": "v0.1.0",
    "require": {
        "php": ">=8.2",
        "php-amqplib/php-amqplib": "^3.7",
        "slick/module-api": "dev-main"
    },
    "keywords": [
        "slick",
        "AMQP",
        "slick-modules",
        "RabbitMQ",
        "Message Queue",
        "Producers",
        "Consumers"
    ],
    "require-dev": {
        "phpmd/phpmd": "dev-master",
        "phpstan/phpstan": "2.1.x-dev",
        "phpunit/phpunit": "11.5.x-dev",
        "slick/webstack": "2.x-dev",
        "squizlabs/php_codesniffer": "4.0.x-dev"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Slick\\Amqp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Slick\\Amqp\\": "tests/unit",
            "App\\": "tests/app/src"
        }
    },
    "authors": [
        {
            "name": "Filipe Silva",
            "email": "silvam.filipe@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "check-code": "phpmd --ignore-errors-on-exit src html build/phpmd.xml > build/phpmd.html && phpstan analyze"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
